<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageViewInventarItem"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:layout_marginStart="9dp"
        android:layout_marginBottom="3dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:text="@string/benutzen"
        android:id="@+id/buttonItemBenutzen"
        android:layout_below="@+id/imageViewInventarItem"
        android:textSize="8sp"
        android:layout_alignRight="@+id/imageViewInventarItem"
        android:layout_alignEnd="@+id/imageViewInventarItem"
        android:background="@color/light_blue_1"
        android:layout_alignLeft="@+id/imageViewInventarItem"
        android:layout_alignStart="@+id/imageViewInventarItem" />

</RelativeLayout>